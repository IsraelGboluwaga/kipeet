{{> nav }}

<div class="user-container justify-content-center align-items-center col-sm-6">
    <h5 class="p-b-3">Edit Task</h5>
    <form action="" id="edit-task-block" class="form-control-static">
        <div class="form-group">
            <label class="sr-only">Edit Task</label>
            <input type="text" id="edit-task-title" class="form-control form-control-md" name="title" maxlength="60"
                   value="{{ task.title }}" required="required"/>
        </div>
        <div class="form-group">
            <label class="sr-only">Task Body</label>
            <textarea id="edit-task-body" class="form-control form-control-md"  rows="4" name="body"
                      required="required">{{ task.body }}</textarea>
        </div>
        <div class="form-inline">
            <div class="form-group">
                <button id="save" class="btn btn-success my-2 my-sm-0" type="button">Save</button>
            </div>
            &nbsp;
            <div class="form-group">
                <a id="cancel-edit-task" href='/'>
                    <button class="btn btn-danger my-2 my-sm-0" type="button" style="background-color: #F51A2F">Cancel
                    </button>
                </a>
            </div>
        </div>
    </form>
</div>

<script>
    $('#save').on('click', function () {
        var title = $('#edit-task-title').val();
        var body = $('#edit-task-body').val();

        $.ajax({
            url: '/api/tasks/update/{{ task._id }}',
            type: 'PUT',
            data: {
                title: title,
                body: body
            },
            success: function () {
                location.href = '/user/{{ username }}';
            },
            error: function () {
                location.href = '/user/{{ username }}';
            }
        });
    });
</script>