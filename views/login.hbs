<div class="photo-cover">
    <section class="cover">
        <div class="container">
            <!--<div class="row">-->
            <div class="justify-content-center align-items-center" style="padding: 0.8rem">
                <h1 class="display-4" id="header"> {{ header }} </h1>
                <br>

                <p class="text-center"><em>{{ welcome_message }}</em></p>

                <div class="error-div text-center">
                    {{ error_message }}
                </div>

                <form action="/login" method="post" class="form-control-static">
                    <div class="form-group">
                        <label class="sr-only">email</label>
                        <input type="email" class="form-control form-control-md" placeholder="Email" name="email"
                               required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">password</label>
                        <input type="password" class="form-control form-control-md" placeholder="Password"
                               name="password" required="required"/>
                    </div>

                    <button type="submit" class="btn btn-info form-control">Login</button>
                </form>
                <br>
                <div class="list-inline-item">
                    <div>
                        <small class="text-*">Don't have an account yet? <a href="/" class="login">Register</a>
                        </small>
                    </div>
                    <div>
                        <small><a href="#" class="login">Forgot password?</a></small>
                    </div>
                </div>
                <br>
            </div>
        </div>
        <!--</div>-->
    </section>
</div>