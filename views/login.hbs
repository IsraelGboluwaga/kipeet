{{> header }}

<section id="cover">
    <div class="container">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="display-4" id="header"> {{ header }} </h1>
            <br>

            <p class="text-sm-center"><i>{{ welcome_message }}</i></p>

            <div id="error-div" class="text-center">
                {{ error_message }}
            </div>

            <form action="/login" method="post" class="form-control-static">
                <div class="form-group">
                    <label class="sr-only">email</label>
                    <input type="email" class="form-control form-control-sm" placeholder="Email" name="email"
                           required="required"/>
                </div>
                <div class="form-group">
                    <label class="sr-only">password</label>
                    <input type="password" class="form-control form-control-sm" placeholder="Password"
                           name="password" required="required"/>
                </div>

                <button type="submit" class="btn btn-info form-control">Login</button>
            </form>
            <div class="list-inline-item">
                <div><small class="text-*">Don't have an account yet? <a href="/">Register</a></small></div>
                <div><small><a href="#">Forgot password?</a></small></div>
            </div>
            <br>
        </div>
    </div>
</section>

{{> footer }}