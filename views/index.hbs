{{!-- {{Add a sign in page}} --}}

<section id="cover">

    <div class="container">
        <div class="row">

            <div class="col-sm-10 col-sm-offset-1">
                <h1 class="display-4" id="header">{{ header }}</h1>
                <br>

                <p class="text-sm-center"><em>{{ header }}</em> {{ welcome_message }}</p>

                <p><em><h4 class="text-sm-center" id="typeJS">" {{ header }} "</h4></em></p>
                <!--Use typeJS for the keepeet above-->

                <form action="/" method="post" class="form-control-static">
                    <div class="form-group">
                        <label class="sr-only">username</label>
                        <input type="text" class="form-control form-control-sm" placeholder="Username" name="username"
                               required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">password</label>
                        <input type="password" class="form-control form-control-sm" placeholder="Password"
                               name="password" required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">email</label>
                        <input type="text" class="form-control form-control-sm" placeholder="Email" name="email"
                               required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">phone</label>
                        <input type="tel" class="form-control form-control-sm" placeholder="Phone Number" name="phone"/>
                    </div>
                    <button class="btn btn-info form-control">Sign Up</button>
                </form>

                <br>

                <div class="text-md-center">
                    <p class="small">Already have an account?</p>
                    <a href="/login" class="btn btn-info-outline" role="button">Login</a>
                </div>
            </div>
        </div>
    </div>
</section>
